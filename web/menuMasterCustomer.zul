<?init class="com.enseval.ttss.util.AuthenticationInit"?>

<zk xmlns="http://www.zkoss.org/2005/zul">
    <style>
        .z-datebox-input,.z-combobox-input,.z-combobox-button,.z-datebox-button{
        height:30px;
        }
        
    </style>
    <borderlayout>
        <center>
                
          
            <window title="CUSTOMER LIST" vflex="3" apply="org.zkoss.bind.BindComposer"  viewModel="@id('vm') @init('com.enseval.ttss.vm.MenuMasterCustomerVM')">
                <listbox id="custList" mold="paging" width="100%" vflex="true" autopaging="true" 
                         emptyMessage="Tidak ada data"
                         model="@load(vm.listCustomer)"
                         selectedItem="@bind(vm.customer)">  
                            
                    <auxhead>
                        <auxheader colspan="14">
                            
                            <longbox id="lboxId" hflex="3" value="@bind(vm.customer.id)" sclass="form-control input-primary"/> 
                        </auxheader>
                        <auxheader>
                            <button class="btn-success" iconSclass="glyphicon glyphicon-plus" onClick="@command('saveCustomer')">CARI</button>
                        </auxheader>
                    </auxhead>
                                     
                    <listhead>
                        <listheader label="ID" width="60px"/>
                        <listheader label="Nama"/>
                        <listheader label="Shipto"/>
                        <listheader label="Kota"/>
                        <listheader label="Provinsi"/>
                        <listheader label="Kode Pos"/>
                        <listheader label="Nama Area"/>
                        <listheader label="DKLK" width="40px"/>
                        <listheader label="Credit Lmt"/>
                        <listheader label="NPWP"/>
                        <listheader label="Wajib Pajak"/>
                        <listheader label="Create Date"/>
                        <listheader label="Editor"/>
                        <listheader label="Last Update"/>
                        <listheader label="HAPUS"/>
                    </listhead>
                    
                    <template name="model" var="s">
                        <listitem sclass="custList">
                            <listcell label="@load(s.id)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.nama)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.shipto)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.kota)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.provinsi)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.kodePos)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.namaArea)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.DKLK)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.creditLimit)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.npwp)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.namaWajibPajak)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.creationDate)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.lastUpdateBy)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell label="@load(s.lastUpdateDate)" style="text-overflow: ellipsis; white-space: nowrap;"/>
                            <listcell>
                                <button class="btn-xs btn-danger" iconSclass="glyphicon glyphicon-trash" onClick="@command('hapusCustomer',customernya=s)"></button>
                                <button class="btn-xs btn-success" iconSclass="glyphicon glyphicon-edit" onClick="@command('hapusCustomer',customernya=s)"></button>
                            </listcell>
                        </listitem>
                    </template>
                    <listfoot>
                              
                    </listfoot>
                            
                </listbox>
            </window>
        </center>
    </borderlayout>
</zk>
